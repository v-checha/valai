{
  "name": "valai",
  "version": "0.1.0",
  "description": "AI/LLM-native TypeScript validation library optimized for LLM outputs, function calling, and structured generation",
  "keywords": [
    "validation",
    "schema",
    "typescript",
    "llm",
    "ai",
    "openai",
    "anthropic",
    "claude",
    "gemini",
    "json-schema",
    "type-inference",
    "zod",
    "json-repair",
    "function-calling",
    "structured-output"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/valai#readme",
  "bugs": {
    "url": "https://github.com/yourusername/valai/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/valai.git"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "bench": "vitest bench",
    "bench:run": "vitest bench --run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run build && npm run test"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0",
    "zod": "^4.1.13",
    "zod-to-json-schema": "^3.25.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
